;; Initial setup

;; Shrinking fringes to 1 pixel
(fringe-mode 1)

;; Remove security vulnerability
(eval-after-load "enriched"
  '(defun enriched-decode-display-prop (start end &optional param)
     (list start end)))

;; No splash screen please ... jeez
(setq inhibit-startup-message t)

(provide 'setup-init)